@model AppLogin.ViewModels.RecoverPasswordViewModel
@{
    ViewData["Title"] = "Recover Password";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="RecoverPassword">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Recover Password" class="btn btn-primary" />
                <a asp-action="Login" asp-controller="Account" class="btn btn-success"></a>
            </div>
        </form>
        <div class="text-info">
            <p>
                @ViewBag.Message
            </p>
        </div>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_validationScriptsPartial");}
}

